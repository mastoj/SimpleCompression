@using SimpleCompression.Mvc
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Html.RegisterCssFiles(new SimpleCompression.SimpleCompressionConfiguration() { Compress = false, ClientVersionPrefix = "ver3"}, "~/Content/Site.css")
    @Html.RegisterScripts("~/Scripts/jquery-1.4.4.js", 
                            "~/Scripts/jquery-ui.js")
@*    <script src="@Url.Content("~/Scripts/jquery-1.4.4.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
*@</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>My MVC Application</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
